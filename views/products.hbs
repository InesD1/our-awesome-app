                        {{/if}}
                     </div>
                </li>
                <li>
                    <span class="product-name-and-brand">
                        <a href="/product/{{this.product_name}}">
                            <h3 class="name capitalized">
                            {{this.product_name}}
                            </h3>
                        </a>
                    </span>
                <li>
                    <h4 class="brand capitalized">
                        {{this.brands}}
                    </h4>
                </li>
