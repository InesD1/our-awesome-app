{{#extend "stylesheets"}}
  <link rel="stylesheet" href="/stylesheets/home.css"/>

  <link href="https://fonts.googleapis.com/css?family=Amatic+SC&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,700" rel="stylesheet" />
{{/extend}}

<body>

    <div class="s013">
      <form action="/search" method="POST">
        <fieldset class='title'>
          <legend>WHAT ARE YOU LOOKING FOR?</legend>
        </fieldset>
        <div class="inner-form">
          <div class="left">
            <div class="input-wrap first">
              <div class="input-field first">
                <label>PRODUCT</label>
                <input type="text" name="productInput" placeholder="ex: cheese, chocolate, cereal, milk" />
              </div>
            </div>
            
          </div>
        </div>
        <button class="btn-search" type="submit">SEARCH</button>
      </form>
    </div>
    {{#if products}}
     {{#each products}}
        <div class="product-list-element">
            <ul class="product-ul">
                <li>
                    <div class="image-div">
                        {{#if this.image_url}}
                            <img class="food-img" src="{{this.image_url}}">
                        {{else}}
                            <img class="food-img" src="/images/wishlist5.png">
                        {{/if}}
                     </div>
                </li>
                <li>
                    <span class="product-name-and-brand">
                        <a href="/product/{{this.product_name}}"><h3 class="name capitalized">{{this.product_name}}</h3></a>
                    </span>
                <li><h4 class="brand capitalized">{{this.brands}}</h4></li>
                <li><a class="add-wishlist" href="/add-wishlist/{{this.id}}" type="button">‚ù§Ô∏è</a></li>
                </li>
                <li>
                    <div>
                        {{#ifCond this.nutrition_grades_tags}}
                            <h4>ü§∑‚Äç‚ôÇÔ∏è</h4>
                        {{else}}
                            <img class="nutriscore" src="/images/nutriscore-{{this.nutrition_grades_tags}}.png">
                        {{/ifCond}}
                    </div>
                </li>
            </ul>
        </div>
    {{/each}}
{{else}}

{{/if}}

