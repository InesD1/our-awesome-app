 {{#extend "stylesheets"}}
    <link rel="stylesheet" href="/stylesheets/login.css">
{{/extend}}

 <form class="form-container-signin" action="/signup" method="POST" class="form">

    <h1 class='create-header'>Create an Account</h1>

    <label class='name-signup' for="username">ğŸ’š Username</label>
    <input class='form-field-signup' type="text" required name="username">

    <label class='name-signup' for="email">ğŸ’š Your Email</label>
    <input class='form-field-signup' type="text" required name="email">

    <label class='name-signup' for="firstname">ğŸ’š First Name</label>
    <input class='form-field-signup' type="text" required name="firstname">

    <label class='name-signup' for="lastname">ğŸ’š Last Name</label> 
    <input class='form-field-signup' type="text" required name="lastname">

    <label for="password">
        <span class='name-signup'>ğŸ’š Password</span> 
    </label>
    <span class="password-requirements">* 8 characters, at least 1 number and 1 letter</span>

    <input class='form-field-signup' type="password" required pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$" name="password">
    
    <div class="pure-controls">
            <label for="cb" class="pure-checkbox">
                <input id="cb" type="checkbox"><a href="#">I've read the terms and conditions</a>
            </label>
    </div>

    <button class='green-btn-container green-btn' type="submit">Sign Up</button>

</form>


<script>
    window.onload = function() {
        var email = document.getElementById("email");
        var form = document.getElementsByClassName("form")[0];      
        email.addEventListener("input", function (event) {           
            axios({
                method: "POST",
                url: "{{{config.host}}}/auth/email-availability",
                data: {
                    email: email.value
                }
            })
            .then((response)=> {
                if(!response.data.available) {
                    email.setCustomValidity("Email is unavailable");
                    form.reportValidity()
                } else {
                    email.setCustomValidity("");
                }
            })
            .catch((err)=>{
                serverError.style.display = "block"
            })
        });
    }
</script>